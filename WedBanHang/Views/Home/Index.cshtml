@model WedBanHang.Models.HomeViewModel
@{
    ViewData["Title"] = "Trang chủ";
    int numOfQuantity = 1;
}

<!-- DANH MỤC -->
<section class="bg-white py-4">
    <div class="container">
        <h5 class="mb-4 fw-bold text-uppercase">Danh mục</h5>

        @for (int i = 0; i < Model.Categories.Count(); i += 10)
        {
            <div class="d-flex justify-content-center gap-3 mb-3 flex-wrap category-row">
                @foreach (var category in Model.Categories.Skip(i).Take(10))
                {
                    <div class="text-center category-item">
                        <a asp-controller="Product" asp-action="ByCategory" asp-route-categoryId="@category.Id"
                           class="text-decoration-none text-dark d-block">
                            <div class="category-box">
                                <img src="@category.ImageUrl" class="category-img mb-2" alt="@category.Name" />
                                <div class="category-name">@category.Name</div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</section>


<!-- Sản phẩm -->
<section class="py-4">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-truncate">@item.Name</h5>
                            <p class="card-text text-danger fw-bold">@item.Price.ToString("#,##0") VND</p>
                        </div>
                        <div class="card-footer bg-white">
                            <span class="btn btn-outline-secondary w-100 disabled">Xem chi tiết</span>
                            <!-- Hoặc bỏ nút nếu không muốn hiển thị -->
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



