@model WedBanHang.Models.Order
@{
    ViewData["Title"] = "Đặt hàng thành công";
}
<div class="container mt-5 text-center">
    <h2 class="text-success mb-3">🎉 Đặt hàng thành công!</h2>
    <p>Cảm ơn bạn, <strong>@Model.ApplicationUser?.FullName</strong>, đã đặt hàng!</p>
    <p><strong>Mã đơn hàng:</strong> #@Model.Id</p>
    <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Tổng tiền:</strong> @Model.TotalPrice.ToString("N0") VNĐ</p>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">Quay về trang chủ</a>
        <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Xem chi tiết đơn hàng</a>
    </div>
</div>



